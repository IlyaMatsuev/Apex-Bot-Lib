{
    "name": "apex-bot-lib",
    "private": true,
    "version": "1.0.0",
    "description": "Salesforce Apex package for quick configuration and managing of the chat bots (Telegram, Viber, WhatsApp, etc.)",
    "scripts": {
        "prettier": "prettier --write \"**/*.{cls,js,json,md,trigger,xml,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{cls,js,json,md,trigger,xml,yaml,yml}\""
    },
    "devDependencies": {
        "@prettier/plugin-xml": "^0.12.0",
        "husky": "^4.2.1",
        "lint-staged": "^10.0.7",
        "prettier": "^2.0.5",
        "prettier-plugin-apex": "^1.8.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{cls,js,json,md,trigger,xml,yaml,yml}": [
            "prettier --write"
        ]
    }
}
